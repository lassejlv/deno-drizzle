{
  "tasks": {
    "dev": "deno run -A --env-file=.env.local --watch src/main.ts",
    "compile": "deno compile --no-check --output app -A src/main.ts",
    "db:generate": "deno run -A --env-file=.env.local npm:drizzle-kit generate",
    "db:push": "deno run -A --env-file=.env.local npm:drizzle-kit push"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.4.3",
    "@libsql/client": "npm:@libsql/client@^0.15.1",
    "@std/assert": "jsr:@std/assert@1",
    "drizzle-kit": "npm:drizzle-kit@^0.30.6",
    "drizzle-orm": "npm:drizzle-orm@^0.41.0",
    "drizzle-zod": "npm:drizzle-zod@^0.7.1",
    "hono": "npm:hono@^4.7.5",
    "zod": "npm:zod@^3.24.2"
  }
}
